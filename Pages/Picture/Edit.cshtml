@page
@model PixCollab.Pages.Picture.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="mt-4">Update</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@Model.Picture.URL" class="img-fluid rounded-start">
                </div>
                <div class="col-md-8">
                    <div class="card-body col-md-8">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Picture.ID" />
                            <div class="form-group">
                                <label asp-for="Picture.Title" class="control-label"></label>
                                <input asp-for="Picture.Title" class="form-control" />
                                <span asp-validation-for="Picture.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Picture.Description" class="control-label"></label>
                                <input asp-for="Picture.Description" class="form-control" />
                                <span asp-validation-for="Picture.Description" class="text-danger"></span>
                            </div>
                            <h4 class="mt-4">Metadata</h4>
                            <div class="form-group">
                                <label asp-for="Picture.Metadata.CapturedBy" class="control-label"></label>
                                <input asp-for="Picture.Metadata.CapturedBy" class="form-control" />
                                <span asp-validation-for="Picture.Metadata.CapturedBy" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Picture.Metadata.CapturedDate" class="control-label"></label>
                                <input asp-for="Picture.Metadata.CapturedDate" class="form-control" />
                                <span asp-validation-for="Picture.Metadata.CapturedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Picture.Metadata.Geolocation" class="control-label"></label><br />
                                <div class="col-4">
                                    <label asp-for="Longitude" class="custom-control-inline"></label>
                                    <input asp-for="Longitude" class="form-control" type="number" />
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                                <label asp-for="Latitude" class="custom-control-inline"></label>
                                <input asp-for="Latitude" class="form-control" type="number" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Picture.Metadata.Tags" class="control-label"></label>
                                <input asp-for="Picture.Metadata.Tags" class="form-control" />
                                <span asp-validation-for="Picture.Metadata.Tags" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2" style="text-align:right">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
